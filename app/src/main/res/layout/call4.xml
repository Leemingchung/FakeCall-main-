<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#5F971E"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#F1F1F1"
            android:textSize="18dp"

            />
        <TextView
            android:id="@+id/text_in_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="IN CALL "
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:visibility="gone" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incoming Call "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />
        <TextView
            android:id="@+id/caller_name"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private Number"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/caller_number"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="03885123"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42dp"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:visibility="gone" />
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_below="@id/caller_name"
            android:visibility="gone"
            android:id="@+id/caller_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/person" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#DFDEDE"
        >
        <RelativeLayout
            android:id="@+id/calling"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            >
            <LinearLayout
                android:layout_marginBottom="80dp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="30dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#2FA503"
                    app:cardCornerRadius="200dp"
                    >
                    <ImageView
                        android:onClick="reciveCall"
                        android:id="@+id/gif_answer"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/call"

                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="80dp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity=""
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="30dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#FF0000"
                    app:cardCornerRadius="90dp"
                    >
                    <ImageView

                        android:id="@+id/gif_reject"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/uncall" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/caller_number"
            android:id="@+id/attend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:visibility="gone">
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/mute"
                android:layout_alignTop="@+id/calender"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/imgHold"
                    android:onClick="OnClickHold"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_call_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mute"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp"
                android:drawablePadding="4dp"
                android:paddingLeft="40dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/imgCalender"
                    android:onClick="OnClickcalende"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/addcallll"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="calender"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/calender"
                android:layout_alignBottom="@id/calender"
                android:layout_alignLeft="@+id/contacts"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imgNote"
                    android:onClick="OnClickNote"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_bluetooth_24444"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notepad"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addcall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/calender"
                android:layout_centerVertical="true"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imgaddCall"
                    android:onClick="OnClickSpeaker"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_volume_up_240123"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add call"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/addcall"
                android:drawablePadding="4dp"
                android:paddingRight="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imgcontacts"
                    android:onClick="OnClickContacs"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_mic_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacts"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/addcall"
                android:layout_centerHorizontal="true"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imgmute"
                    android:onClick="OnClickMic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_dialpad_2444"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    />
            </LinearLayout>

            <!--        </RelativeLayout>-->

            <LinearLayout
                android:layout_below="@id/mute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#FF0303"
                    app:cardCornerRadius="90dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:onClick="endCall"
                        android:src="@drawable/uncall" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>